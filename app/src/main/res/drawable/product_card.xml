<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Sombra -->
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorShadow"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Card principal -->
    <item
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorCardBackground"/>
            <corners android:radius="16dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/colorBorder"/>
        </shape>
    </item>

</layer-list>