<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="20dp"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            style="@style/TitleTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/productos_titulo"
            android:textColor="@android:color/white"
            android:textSize="24sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/productos_subtitulo"
            android:textColor="@android:color/white"
            android:alpha="0.9"
            android:layout_marginTop="4dp"/>

        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Cerrar Sesión"
            android:textSize="12sp"
            android:backgroundTint="@android:color/white"
            android:textColor="@color/colorPrimary"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"/>

    </LinearLayout>

    <!-- Lista de productos con ScrollView -->
    <ScrollView
        android:id="@+id/scrollProductos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/btnVerCarrito"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Producto 1: Camiseta deportiva -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/colorCardBackground"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Imagen del producto -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_launcher_foreground"
                            android:scaleType="centerCrop"
                            android:background="#F0F0F0"
                            android:contentDescription="@string/producto1_nombre"/>

                    </androidx.cardview.widget.CardView>

                    <!-- Información del producto -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/producto1_nombre"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextPrimary"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/producto1_descripcion"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextSecondary"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            style="@style/PriceTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$45.000"
                            android:layout_marginBottom="12dp"/>

                        <Button
                            android:id="@+id/btnAgregarProducto1"
                            style="@style/SecondaryButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/productos_agregar"
                            android:textSize="14sp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Producto 2: Audífonos Bluetooth -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/colorCardBackground"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_launcher_foreground"
                            android:scaleType="centerCrop"
                            android:background="#E8F5E9"
                            android:contentDescription="@string/producto2_nombre"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/producto2_nombre"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextPrimary"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/producto2_descripcion"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextSecondary"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            style="@style/PriceTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$80.000"
                            android:layout_marginBottom="12dp"/>

                        <Button
                            android:id="@+id/btnAgregarProducto3"
                            style="@style/SecondaryButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/productos_agregar"
                            android:textSize="14sp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Producto 3: Reloj Inteligente -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/colorCardBackground"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_launcher_foreground"
                            android:scaleType="centerCrop"
                            android:background="#E3F2FD"
                            android:contentDescription="@string/producto3_nombre"/>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/producto3_nombre"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/colorTextPrimary"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/producto3_descripcion"
                            android:textSize="14sp"
                            android:textColor="@color/colorTextSecondary"
                            android:layout_marginBottom="8dp"/>

                        <TextView
                            style="@style/PriceTextStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$250.000"
                            android:layout_marginBottom="12dp"/>

                        <Button
                            android:id="@+id/btnAgregarProducto2"
                            style="@style/SecondaryButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:text="@string/productos_agregar"
                            android:textSize="14sp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Botón flotante Ver Carrito -->
    <Button
        android:id="@+id/btnVerCarrito"
        style="@style/PrimaryButtonStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/productos_ver_carrito"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_shopping_cart"
        android:drawablePadding="8dp"
        android:layout_margin="16dp"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>